@model MyPortpolio.Models.Board

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<script src="~/pulgin/ckeditor/ckeditor.js"></script>

<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h2 class="text-center title" style="color:black">Board</h2>
                    
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Subject" class="control-label"></label>
                                <input asp-for="Subject" class="form-control" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Contents" class="control-label"></label>
                                <input asp-for="Contents" class="form-control" />
                                <span asp-validation-for="Contents" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Contents, new { @class = "control-label"})
                                @Html.TextAreaFor(model => model.Contents,
                                      new {@id = "EditorContents", @class="form-control", @rows=10})
                                <script>CKEDITOR.replace("EditorContents");</script>
                            </div>
                                                       <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />&nbsp;
                                <a asp-action="Index" class="btn btn-secondary">List</a>
                            </div>
                        </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>



