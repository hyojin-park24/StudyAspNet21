@model MyPortpolio.Models.Board

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h2 class="text-center title" style="color:black">Board</h2>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Subject)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Subject)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Contents)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.Contents)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Writer)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Writer)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Password)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Password)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ReadCount)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ReadCount)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


